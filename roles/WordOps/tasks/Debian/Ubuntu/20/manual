---
# https://docs.wordops.net/getting-started/installation-guide/#manual-installation

- name: Install a list of packages
  apt:
    pkg:
    - build-essential
    - curl
    - gzip
    - python3-pip
    - python3-wheel
    - python3-apt
    - python3-setuptools
    - python3-dev
    - sqlite3
    - git
    - tar
    - software-properties-common
    - pigz
    - gnupg2
    - cron
    - ccze
    - rsync
    - apt-transport-https
    - tree
    - haveged
    - ufw
    - unattended-upgrades
    - tzdata
    - ntp
    dpkg_options: 'force-confmiss,force-confold'
  become: true


- name: Create two hard links
  ansible.builtin.file:
    path: '{{ item}}'
    state: directory
    mode: '0755'
  loop:
    - /var/log/wo
    - /var/lib/wo/tmp
    - /var/lib/wo-backup
  become: true

- name: Update PIP
  apt:
    pkg:
    - python3-pip
    - python3-virtualenv
    - python3-setuptools
  become: true

- name: Install WordOps
  pip:
    name: wordops
